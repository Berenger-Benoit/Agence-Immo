{{form_start (form)}}
<div class="row">

	<div class="col-md-5">

		{{ form_row (form.title, { 'label': 'Titre' })}}
	</div>
	<div class="col-md-5">

		{{ form_row (form.description, { 'label': 'Description' })}}
	</div>

	<div class="col-md-2">

		{{ form_row (form.surface, { 'label': 'Surface en m²' })}}
	</div>
</div>
<div class="row">

	<div class="col-md-2">

		{{ form_row (form.rooms, { 'label': 'Pièces' })}}
	</div>

	<div class="col-md-2">

		{{ form_row (form.bedrooms, { 'label': 'Nombre de chambre' })}}
	</div>


	<div class="col-md-2">

		{{ form_row (form.floor, { 'label': 'Etage' })}}
	</div>
	<div class="col-md-4">

		
		{{ form_row (form.heat, { 'label': 'Type de Chauffage' })}}
	</div>
</div>
<div class="row">


	<div class="col-md-4">

		
		{{ form_row (form.city, { 'label': 'Ville' }) }}
	</div>
	<div class="col-md-6">

		{{ form_row (form.address, { 'label': 'Adresse' })}}
	</div>

	<div class="col-md-2">

		{{ form_row (form.postal_code, { 'label': 'Code postal' })}}
	</div>
</div>
<div class="row">
	<div class="col-md-4">

		{{ form_row (form.price, { 'label': 'Prix' })}}
	</div>
	<div class="col-md-2 align-self-end">

		{{ form_row (form.sold, { 'label': 'Vendu' })}}
	</div>
</div>
<div class="row">

	<div class="col-md-6 align-self-end">

		{{ form_row (form.tags)}}
	</div>
	<div class="col-md-6 align-self-end">

		{{ form_row (form.imageFile)}}
	</div>
</div>
{{form_rest(form)}}
<button class="btn btn-primary mt-4">{{ button|default('Enregistrer') }}</button>

{{form_end (form)}}
<a href="{{path('admin_list')}}" class="btn btn-primary mb-2 mt-4">Retour aux biens</a>
