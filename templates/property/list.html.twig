{% extends "base.html.twig" %}

{% block body %}
<div class="jumbotron-list">
     <div class="jumbotron">
        <div class="container d-flex justify-content-center">
            {{form_start(form)}}
            <div class="form-row align-items-end">
                <div class="col">
                    {{form_row(form.minSurface)}}
                </div>

                <div class="col">
                    {{form_row(form.maxPrice)}}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary">Rechercher</button>
                    </div>
                </div>
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
<div class="list-property">
    <div class="container mt-2">
        <h2 class="text-center">Liste de tous les biens</h2>
        <div class="row">
            {% for property in properties %}
            <div class="col-lg-3 col-md-6 mt-2 col-xs-12 mt-2">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title text-center">
                            <a href="{{ path('property_show', {'id' : property.id }) }}">{{ property.title}}</a>
                        </h5>
                        <p class="card-text text-center">
                            {{property.address}}
                            ({{property.postalCode}})
                        </p>
                        <div class="text-primary text-center">
                            {{property.formattedPrice}} â‚¬
                        </div>
                    </div>
                </div>

            </div>
            {% endfor %}
        </div>

        <div class="navigation">
            {{ knp_pagination_render(properties) }}
        </div> 
    </div>
</div>
{% endblock %}