            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{ path('property_show', {'id' : property.id }) }}">{{ property.title}}</a>
                    </h5>
                    <p class="card-text">
                        {{property.address}}
                        ({{property.postalCode}})
                    </p>
                    <div class="text-primary">
                        {{property.formattedPrice}} â‚¬
                    </div>
                </div>
            </div>

        </div>
        {% endfor %}
    </div>

</div>
{% endblock %}