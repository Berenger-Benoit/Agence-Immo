{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div id="page-login">
    <div class="container mt-4">

        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 col-md-6">
                <form id="login" method="post">
                    {% if error %}
                        <div class=" text-center alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                
                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se deconnecter</a>
                        </div>
                    {% endif %}
                
                    <h1 class="text-center">Se connecter</h1>
                    <label for="inputEmail" class="text-center mt-2">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword" class="mt-2">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
                
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html
                
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <button class="btn btn-primary mt-2" type="submit">
                            Se connecter
                        </button>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col d-flex justify-content-center">
                        <p>
                            Pas encore inscrit ?
                        </p>
                        <a class="ml-1" href="{{path('app_register')}}">Créer un compte</a>
                    </div>
                </div>
                
                </form>
            </div>
        </div>

    </div>
</div>
{% endblock %}
